    <% if (locals.msgs) { %>
      <div class="container">
        <% for (type in msgs) {
            msgs[type].forEach(msg=>{
              if (type == 'error') {type = 'danger';} %>
              <div class="alert alert-<%=type%>"><%=msg%></div>
        <%  });
           }  %>
      </div>
    <% } else { %>
    <h4>No messages</h4>
    <% } %>

